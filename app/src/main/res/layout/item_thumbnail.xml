<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_employee_ll_parent"
    android:layout_width="200dp"
    android:layout_height="200dp">

    <!-- ImageView hiển thị hình nền -->
    <ImageView
        android:id="@+id/item_employee_iv_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <!-- TextView hiển thị tên vị trí nằm ở góc dưới trên cùng của ImageView -->
    <TextView
        android:id="@+id/item_employee_tv_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="#80000000"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="Tên món ăn rất dài và sẽ chạy chữ nếu không vừa trong TextView" />

</FrameLayout>
